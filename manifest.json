{
    "manifest_version": 3,
    "name": "Canvas Admin Tools V2",
    "version": "2.1.0",
    "description": "Adds extra functionalities to Canvas LMS for admins by dynamically managing display and clickable scripts.",
    "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "Canvas Admin Tools V2"
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
    },
    "permissions": [
      "storage",
      "scripting",
      "activeTab",
      "windows"
    ],
    "host_permissions": [
      "https://byui.instructure.com/*"
    ]
  }
